#ifndef GP_GESTURES_H_
#define GP_GESTURES_H_
#include "../Base/gp.h"

struct gpGesture {
	gpInt code;

	union info{
		struct {
			gpFloat x;
			gpFloat y;
			gpBool direction;
		} two_finger_scroll ;
		struct {
			gpBool direction;
			gpFloat magnification;
		} zoom;
		struct {
			gpFloat x;
			gpFloat y;
			gpBool direction;
		} scroll;
		struct flick {
			gpFloat x;
			gpFloat y;
			gpBool direction;
		};
		struct rotation {
			gpBool direction;
			gpFloat angle;
		};
		struct move {
			gpFloat x;
			gpFloat y;
			gpByte direction;
		};
		struct press {
			gpFloat x;
			gpFloat y;
		};
		struct double_tap {
			gpFloat x;
			gpFloat y;
		};
		struct tap {
			gpFloat x;
			gpFloat y;
		};
	};
};

#endif
