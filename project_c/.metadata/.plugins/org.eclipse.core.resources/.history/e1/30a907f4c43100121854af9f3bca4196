#ifndef GP_GESTURES_H_
#define GP_GESTURES_H_

struct gpGesture {
	gpInt code;

	union info{
		struct two_finger_scroll {
			gpFloat x;
			gpFloat y;
			gpBool direction;
		};
		struct zoom {
			gpBool direction;
			gpFloat magnification;
		};
		struct scroll {
			gpFloat x;
			gpFloat y;
			gpBool direction;
		};
		struct flick {
			gpFloat x;
			gpFloat y;
			gpBool direction;
		};
		struct rotation {
			gpBool direction;
			gpFloat angle;
		};
		struct move {
			gpFloat x;
			gpFloat y;
			gpByte direction;
		};
		struct press {
			gpFloat x;
			gpFloat y;
		};
		struct double_tap {
			gpFloat x;
			gpFloat y;
		};
		struct tap {
			gpFloat x;
			gpFloat y;
		};
	};
};

#endif /* GP_GESTURES_H_ */
