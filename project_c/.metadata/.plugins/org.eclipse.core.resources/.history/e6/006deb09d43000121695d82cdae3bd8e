CC=gcc
CFLAGS=${DEBUGINFO} -I"${INCLUDE}/Base" -I"${INCLUDE}/Math" -I"${INCLUDE}/Alloc" -D${MODE} -std=c99  -Wno-main -Wall -L"${OUTPUT}" -lGPBase -lGPMath

all: clean libGPAlloc.a GPAlloc
clean:;	rm -f *.o *.exe *.a

libGPAlloc.a: gp_Alloc.o
	ar -r ${OUTPUT}\$@ $^
	
%.o:%.c
	gcc -c ${CFLAGS} -o $@ $<
	
GPAlloc : 
	gcc -g ${CFLAGS} -lGPAlloc -o test