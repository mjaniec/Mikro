#ifndef GP_GESTURES_H_
#define GP_GESTURES_H_
#include "../Base/gp.h"

struct gpGesture {
	gpInt code;

	union info{
		struct {
			gpFloat x;
			gpFloat y;
			gpBool direction;
		} two_finger_scroll ;
		struct {
			gpBool direction;
			gpFloat magnification;
		} zoom;
		struct {
			gpFloat x;
			gpFloat y;
			gpBool direction;
		} scroll;
		struct flick {
			gpFloat x;
			gpFloat y;
			gpBool direction;
		};
		struct {
			gpBool direction;
			gpFloat angle;
		} rotation;
		struct {
			gpFloat x;
			gpFloat y;
			gpByte direction;
		} move;
		struct {
			gpFloat x;
			gpFloat y;
		} press;
		struct {
			gpFloat x;
			gpFloat y;
		}  double_tap;
		struct tap {
			gpFloat x;
			gpFloat y;
		};
	};
};

#endif
