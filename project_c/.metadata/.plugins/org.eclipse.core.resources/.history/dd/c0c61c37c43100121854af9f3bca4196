#ifndef GP_GESTURES_H_
#define GP_GESTURES_H_

struct gpGesture {
	gpInt code;
	union info{
		struct {				// positon
			gpFloat x;
			gpFloat y;
			gpBool direction;	// flick
		};
		struct {
			gpBool direction; 	// rotation - left - right
		};
		gpBool in;				// zoom
		gpBool out;				// zoom
	};
};

#endif /* GP_GESTURES_H_ */
