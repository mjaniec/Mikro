#ifndef GP_GESTURES_H_
#define GP_GESTURES_H_

struct gpGesture {
	gpInt code;
	union info{
		struct {				// flick
			gpFloat x;
			gpFloat y;
			gpBool direction;
		};
		struct {
			gpBool direction; 	// rotation
			gpFloat angle;
		};
		struct {				// move
			gpFloat x;
			gpFloat y;
			gpByte direction;
		};
		struct {				// press, double tap, tap
			gpFloat x;
			gpFloat y;
		};
	};
};

#endif /* GP_GESTURES_H_ */
